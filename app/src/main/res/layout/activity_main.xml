<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="binta.smartroomv3.MainActivity">


    <ImageView
        android:layout_width="215dp"
        android:layout_height="215dp"
        android:id="@+id/imageView_on"
        android:src="@drawable/on"
        android:visibility="visible"
        android:layout_alignTop="@+id/imageView_off"
        android:layout_alignRight="@+id/imageView_off"
        android:layout_alignEnd="@+id/imageView_off"
        android:layout_alignLeft="@+id/imageView_off"
        android:layout_alignStart="@+id/imageView_off"
        android:layout_alignBottom="@+id/imageView_off" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="802dp"
        android:id="@+id/imageView_off"
        android:src="@drawable/off"
        android:visibility="visible"
        android:layout_above="@+id/button_on"
        android:layout_alignLeft="@+id/button_on"
        android:layout_alignStart="@+id/button_on"
        android:layout_marginBottom="30dp"
        android:layout_alignRight="@+id/button_on"
        android:layout_alignEnd="@+id/button_on" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On"
        android:id="@+id/button_on"
        android:layout_above="@+id/button_off"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/button_off"
        android:layout_alignStart="@+id/button_off" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed &amp; Developed by binta"
        android:id="@+id/textView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Off"
        android:id="@+id/button_off"
        android:layout_above="@+id/textView"
        android:layout_marginBottom="103dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

</RelativeLayout>
